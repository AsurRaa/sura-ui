{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "packages": [
    "packages/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md"
        
      ],
      "registry": "https://registry.npmjs.org/",
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  }
}
